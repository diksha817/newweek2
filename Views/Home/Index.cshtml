@model IEnumerable<WEEK2.Models.Book>

<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <title>

    </title>
</head>
<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 ><b>BOOK LIST</b></h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Home" asp-action="Add" class="btn btn-primary">
                    <i class="bi bi-plus"></i>Add Book
                </a>
                <a asp-controller="Home" asp-action="Update" class="btn btn-primary">
                    <i class="bi bi-pencil"></i>
                </a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>ISBN</th>
                <th>TITLE</th>
                <th>AUTHOR</th>
                <th>PRICE</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Book in Model)
            {
                <tr>
                    <td width="20%">@Book.ISBN</td>
                    <td width="50%">@Book.Title</td>
                    <td width="50%">@Book.Author</td>
                    <td width="50%">@Book.Price</td>
                    <td>
                        <form asp-controller="Home" asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this book?')">
                            <input type="hidden" name="ISBN" value="@Book.ISBN"/>
                       <button class="btn btn-danger" type="submit" ><i class="bi bi-trash"></i></button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>

